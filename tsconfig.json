{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": ".",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
  },
  "include": ["./src/*.ts"],
  "exclude": ["./dist"],
}